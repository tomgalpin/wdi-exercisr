<!DOCTYPE html>
<html>
<head>
  <title>Exercisr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">

    <ul class="title-area" >
      <li class="name">
        <h1>Exercisr</h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <% if current_user %>
      <ul class="left">
        <li class="divider"></li>

        <li class="active">
          <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
        </li>
        <li class="divider"></li>
        <li class="active">
          <%= link_to "Logout", :logout %>
        </li>
        <% else %>
        <li class="active">
          <%= link_to "Register", new_user_path %>
        </li>
        <li class="divider"></li>
        <li class="active">
          <%= link_to "Login", :login %>
        </li>
      </ul>
      <% end %>

    </section>
  </nav>

<div>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>



<%= yield %>

</body>
</html>
